    android:textColor="#ffffff"
    android:layout_marginTop="10sp"
    android:text="Player 1's Score:"
    android:gravity="center"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textStyle="italic"/>
    <TextView
